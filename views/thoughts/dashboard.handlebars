<div class="dashboard">
    <div class="titleContainer">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar Pensamento</a>
    </div>

    <h3>Seus Pensamentos</h3>

    <ul>
        {{#each thoughts}}
            <li>
                <span class="label">{{this.title}} </span>
                <span class="actions">
                    <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/thoughts/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
                
            </li>
        {{/each}}
    </ul>
    {{#if emptyThought}}

        <p>Ainda não há nenhum Pensamento seu, comece <a href="/thoughts/add">por aqui</a></p>
    {{/if}}

</div>